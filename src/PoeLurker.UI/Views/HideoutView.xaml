<Window x:Class="PoeLurker.UI.Views.HideoutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PoeLurker.UI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="HideoutView"
        AllowsTransparency="True"
        Background="Transparent"
        Focusable="False"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:IconPack Grid.Row="0"
                        Height="20"
                        Margin="4,0,0,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Data="{x:Static local:IconPackData.Shield}"
                        Foreground="#c2d9ff"
                        Visibility="{Binding KingsmarchVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <local:IconPack Grid.Row="1"
                        Height="25"
                        Margin="4,0,0,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Data="{x:Static local:IconPackData.Hideout}"
                        Foreground="#c2d9ff" />
        <Border Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                cal:Message.Attach="[Event MouseDown] = [Action JoinHideout()]"
                CornerRadius="0 100 0 0"
                Cursor="Hand">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0.002" />
                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DebugEnabled}" Value="True">
                            <Setter Property="Background" Value="Green" />
                            <Setter Property="Opacity" Value="1" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.05" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <Border cal:Message.Attach="[Event MouseDown] = [Action JoinKingsmarch()]"
                CornerRadius="0 30 0 0"
                Cursor="Hand"
                Visibility="{Binding KingsmarchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0.002" />
                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DebugEnabled}" Value="True">
                            <Setter Property="Background" Value="Green" />
                            <Setter Property="Opacity" Value="1" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.05" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </Grid>
</Window>
